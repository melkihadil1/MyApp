name: SonarQube Analysis

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main
  workflow_dispatch:  # permet un lancement manuel depuis GitHub Actions

permissions:
  pull-requests: read  # permet à SonarQube de décorer les PRs avec les résultats

jobs:
  sonar:
    name: SonarQube Scan
    runs-on: ubuntu-latest

    steps:
      # Étape 1 : récupérer le code
      - name: Checkout repository
        uses: actions/checkout@v3

      # Étape 2 : installer Java
      - name: Set up JDK 17
        uses: actions/setup-java@v3
        with:
          distribution: temurin
          java-version: 17

      # Étape 3 : cacher les dépendances Maven pour accélérer
      - name: Cache Maven packages
        uses: actions/cache@v3
        with:
          path: ~/.m2/repository
          key: ${{ runner.os }}-maven-${{ hashFiles('**/pom.xml') }}
          restore-keys: |
            ${{ runner.os }}-maven-

      # Étape 4 : build et analyse SonarQube
      - name: Build and analyze with Maven
        env:
          SONAR_TOKEN: ${{ secrets.SONAR_TOKEN }}       # Ton token SonarQube
        run: mvn clean verify sonar:sonar \
             -Dsonar.projectKey=MyApp \
             -Dsonar.host.url=${{ secrets.SONAR_HOST_URL }} \
             -Dsonar.login=${SONAR_TOKEN}
